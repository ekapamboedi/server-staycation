<div class="tab-pane fade show" id="show-activity" role="tabpanel" aria-labelledby="activity-tab">
    <div class="card-shadow mb-4 mt-2">
<div class="card-body">
  
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
             <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="" name="name" placeholder="Enter Activity Name" required>
                </div>
                <div class="form-group">
                    <label for="type">Type</label>
                    <input type="text" class="form-control" id="" name="type" placeholder="Enter Type" required>
                </div>
                <div class="form-group">
                  <label for="imageUrl">Activity Image </label>
                  <input type="file" class="form-control" id="" name="image" max="1" required>
                </div>
                  <div class="modal-footer">
                    <input type="hidden" name="itemId" id="" value="<%= itemId %>">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>        
             </form>
            </div>
        </div>
        <div class="col-md-7">
            <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Image</th>
                    <th>Action</th>
                    </tr>
                </thead>
            <tbody>
                <% for(let i = 0; i< activity.length; i++){ %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= activity[i].name %></td>
                        <td><%= activity[i].type %></td>
                        <td>
                            <img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="imageUrl" height="70px" width="70px">
                        </td>
                        <form action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE" method="POST">
                        <td><a href="javascript:void();" 
                                type="button"  
                                class="btn btn-warning btn-circle btn-sm button-update" 
                                data-id="<%= activity[i].id %>" 
                                data-name="<%= activity[i].name %>" 
                                data-type="<%= activity[i].type %>">
                                <i class="fas fa-edit"></i></a>
                            <button type="submit" class="btn btn-danger btn-circle btn-sm button-delete" ><i class="fas fa-trash"></i></button>
                        </form>
                        </td>
                    </tr>
               <% } %>
            </tbody>
            </table>
        </div>
    </div>
        </div>
    </div>
</div>
